<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <title>Report_read</title>
    <%= stylesheet_link_tag "report_read" %>
    <script>
        function eraseText() 
        {
            document.getElementById("output").value = "";
        }
        $(".user").focusin(function(){
          $(".inputUserIcon").css("color", "#e74c3c");
        }).focusout(function(){
          $(".inputUserIcon").css("color", "white");
        });
        
        $(".pass").focusin(function(){
          $(".inputPassIcon").css("color", "#e74c3c");
        }).focusout(function(){
          $(".inputPassIcon").css("color", "white");
        });
    </script>
  </head>
  <body>
    <header class="main-header">
    <div id="fixed-menu">   
      <nav class="navbar navbar-default">
          <div class="container-fluid" style="background-color:#282828;">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="https://prj-0726-board2-yoohoogun114-1.c9.io/">
                  <i class="fa fa-home" style="color:white;"></i>
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li><a href="#" style="color:white">Board</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li><p style="color:white"><%= current_user.email %></p></li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>

      </div>
    </header>
    <div id="main-content">
          <form action="/board/correct?id=<%= @one_report.id %>" enctype="multipart/form-data" method="POST">
              <h2 style="color:white">&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-pencil-square"></i> Read Article</h2>
              <div align="center">
                      <input type="text" name="report_title" value="<%= @one_report.report_title %>" readonly>
                      
                          <!--
                          <input type="text" placeholder="Enter Text Here" name="report_title">
                          -->
                          <input type="text" name="report_username" value="<%= @one_report.report_username %>" readonly>
                          <% unless @one_report.report_image == nil %>
                              <img src="<%= @one_report.report_image.url %>"><br/>
                          <% end %>
                      <textarea name="report_content"  id="output" class="inputUserIcon" style="position:static" readonly><%= @one_report.report_content %></textarea>
                      <input type="hidden" name="report_username">
                      <% if @one_report.report_username == current_user.email %>
                      <!-- 수정하기
                      <input type='submit' value='Correct' name='submit' style="width:30%" class="submit">
                      -->
                      <% end %>
                      <input type="button" class="button" onclick="location.href='/main/report_list';" style="width:30%" value="List"/>
          </form>
      </div>
      <br/>
      <br/>
      <br/>
    </div>
  </body>
</html>